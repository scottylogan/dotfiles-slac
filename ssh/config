#--- Stanford Bastions ---

Host bastion.*.stanford.edu
  User swl
  IdentityFile ~/.ssh/id_rsa
  ForwardAgent yes
#  PubkeyAuthentication no
#  GSSAPIAuthentication yes
#  GSSAPIDelegateCredentials yes

#--- itlab ---

Host code.stanford.edu
  User git
  IdentityFile ~/.ssh/github_rsa

Host webapp.itlab.stanford.edu
  User swl
  IdentityFile ~/.ssh/id_rsa
  ForwardAgent yes

Host *.itlab.stanford.edu !ermine.itlab.stanford.edu !sable.itlab.stanford.edu
  IdentityFile ~/.ssh/itlab-aws
  User admin
  GSSAPIAuthentication no
  GSSAPIDelegateCredentials no
  ForwardX11 no
  ControlMaster no
  ProxyCommand none
  ControlPath none

#--- anchorage ---

Host *.anchorage.stanford.edu
  ControlMaster no
   ProxyCommand none
   ControlPath none
   ForwardAgent no
   ForwardX11 no


