#--- IT Lab ---

Host *.itlab.stanford.edu ermine.stanford.edu sable.stanford.edu mineral.stanford.edu vegetable.stanford.edu animal.stanford.edu
  IdentityFile ~/.ssh/id_rsa
  User swl
  ForwardAgent yes
  ProxyJump none
  RemoteForward /home/swl/.gnupg/S.gpg-agent /Users/swl/.gnupg/S.gpg-agent.extra


#--- Stanford ---

Host code.stanford.edu
  User git
  IdentityFile ~/.ssh/github_rsa
  ProxyJump none

Host git.stanford.edu
  User gitolite
  HostkeyAlgorithms +ssh-rsa

Host uitgitaws.amazon.stanford.edu
  User git
  IdentityFile ~/.ssh/github_rsa

Host events-dev
  Hostname webmaster2.stanford.edu

Host soup.stanford.edu
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials yes
  ControlPersist yes
  ProxyJump none
  ProxyCommand none

Host cardinal cardinal? corn corn??
  HostName %h.stanford.edu

Host cardinal cardinal? cardinal.stanford.edu cardinal?.stanford.edu
  ProxyJump none

Host *.stanford.edu
  User swl
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials yes
  ProxyJump swl@soup.stanford.edu
  ControlMaster auto
  ControlPath "%d/.ssh/sockets/%n"



#--- github ---

Host github.com
   IdentityFile ~/.ssh/github_rsa


#--- local / catbert ---

Host animal.local
   User swl

Host beaker.catbert.net
   User swl

Host *.catbert.net *.local
   User scotty
   ForwardAgent yes
   ForwardX11 no
   SendEnv TERM XAUTHORITY
   IdentityFile ~/.ssh/id_rsa

#--- defaults ---

# send keepalive packets every 5 minutes
# keep connections alive for 4 hours
Host * !localhost
   ForwardAgent yes
   ForwardX11 no
   ServerAliveInterval 300
   ServerAliveCountMax 48
   HashKnownHosts yes

