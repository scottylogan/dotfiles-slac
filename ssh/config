Host flatcar
  HostName localhost
  Port 2222
  User core
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  SetEnv LANG=C LC_ALL=C LC_COLLATE=C LC_MESSAGES=C

#--- pico.sh ---

Host pico.sh, prose.sh
  IdentityFile ~/.ssh/pico-sh
  IdentitiesOnly yes
  User scotty

#--- IT Lab ---

Host *.itlab.stanford.edu ermine.stanford.edu sable.stanford.edu mineral.stanford.edu vegetable.stanford.edu animal.stanford.edu
  IdentityFile ~/.ssh/id_rsa
  PubkeyAcceptedAlgorithms ^ssh-rsa-cert-v01@openssh.com
  User swl
  ForwardAgent yes
  ProxyJump none
  ControlMaster no
  ControlPath none
#  RemoteForward /home/swl/.gnupg/S.gpg-agent /Users/swl/.gnupg/S.gpg-agent.extra


#--- Stanford ---

Host code.stanford.edu gitlab.med.stanford.edu
  User git
  IdentityFile ~/.ssh/github_rsa
  ProxyJump none

Host git.stanford.edu
  User gitolite
  HostkeyAlgorithms +ssh-rsa

Host uitgitaws.amazon.stanford.edu
  User git
  IdentityFile ~/.ssh/github_rsa

Host events-dev
  Hostname webmaster2.stanford.edu

Host soup.stanford.edu salad.stanford.edu
  User swl
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials yes
  ControlPersist yes
  ProxyJump none
  ProxyCommand none

Host cardinal cardinal? corn corn??
  HostName %h.stanford.edu

Host cardinal cardinal? cardinal.stanford.edu cardinal?.stanford.edu
  ProxyJump none

#Host *.stanford.edu !soup.stanford.edu !salad.stanford.edu
Host *.stanford.edu
  User swl
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials yes
  ProxyJump swl@soup.stanford.edu
  ControlMaster auto
  ControlPath "%d/.ssh/sockets/%n"



#--- github ---

Host github.com
   IdentityFile ~/.ssh/github_rsa


#--- local / catbert ---

Host animal.local
   User swl

Host beaker.local
  AddressFamily inet

Host *.catbert.net *.local
   User scotty
   ForwardAgent yes
   ForwardX11 no
   SendEnv TERM XAUTHORITY
   IdentityFile ~/.ssh/id_rsa

#--- defaults ---

# send keepalive packets every 5 minutes
# keep connections alive for 4 hours
Host * !localhost
   ForwardAgent yes
   ForwardX11 no
   ServerAliveInterval 300
   ServerAliveCountMax 48
   HashKnownHosts yes

Host default
  HostName 127.0.0.1
  User vagrant
  Port 50022
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile /Users/swl/.vagrant.d/insecure_private_key
  IdentitiesOnly yes
  LogLevel FATAL

