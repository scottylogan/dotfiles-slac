#--- pico.sh ---

Host pico.sh, prose.sh
  IdentityFile ~/.ssh/pico-sh
  IdentitiesOnly yes
  User scotty


#--- Stanford ---

Host code.stanford.edu
  User git
  IdentityFile ~/.ssh/github_rsa
  ProxyJump none

Host cardinal cardinal? corn corn??
  HostName %h.stanford.edu

Host *.stanford.edu
  User swl
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials yes
  ProxyJump swl@soup.stanford.edu
  ControlMaster auto
  ControlPath "%d/.ssh/sockets/%n"


#--- github ---

Host github.com
   IdentityFile ~/.ssh/github_rsa


#--- local / catbert ---

Host animal.local
   User swl

Host beaker.local
  AddressFamily inet

Host *.catbert.net *.local
   User scotty
   ForwardAgent yes
   ForwardX11 no
   SendEnv TERM XAUTHORITY
   IdentityFile ~/.ssh/id_rsa

#--- defaults ---

# send keepalive packets every 5 minutes
# keep connections alive for 4 hours
Host * !localhost
   ForwardAgent yes
   ForwardX11 no
   ServerAliveInterval 300
   ServerAliveCountMax 48
   HashKnownHosts yes

Host default
  HostName 127.0.0.1
  User vagrant
  Port 50022
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile /Users/swl/.vagrant.d/insecure_private_key
  IdentitiesOnly yes
  LogLevel FATAL

